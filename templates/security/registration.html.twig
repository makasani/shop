{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block body %}

    <div class="container-fluid bg-light py-5">
        <div class="col-md-6 m-auto text-center">
            <h1 class="h1">Регистрация нового пользователя</h1>
            {% if app.user %}
                <div class="mb-3">
                    Вы вошли в магазин как {{ app.user.username }}, <a href="{{ path('app_logout') }}">Выйти</a>
                </div>
            {% else %}
                <p>
                    Для начала более эффективной работы с нашим интернет магазином<br/>
                    необходимо зарегистрироваться
                </p>
            {% endif %}
        </div>
    </div>

    <div class="page-content pt-4 pb-4">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-details page-login mt-4">
                        <h1 class="h3 mb-3 text-center font-weight-normal title-gradient-1">
                            Регистрация нового пользователя
                        </h1>
                        {{ form_start(registrationForm) }}

                        <div class="form-group">
                            {{ form_label(registrationForm.name) }}
                            {{ form_widget(registrationForm.name) }}
                            {{ form_errors(registrationForm.name) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(registrationForm.email) }}
                            {{ form_widget(registrationForm.email) }}
                            {{ form_errors(registrationForm.email) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(registrationForm.plainPassword) }}
                            {{ form_widget(registrationForm.plainPassword) }}
                            {{ form_errors(registrationForm.plainPassword) }}
                        </div>

                        <div class="form-footer">
                            <div class="row">
                                <div class="col-lg-4">
                                    <br />
                                    <button type="submit" class="btn btn btn-success">
                                        Зарегистрироваться
                                    </button>
                                </div>
                                <div class="col-lg-8">
                                    <div class="custom-control custom-checkbox">
                                        {{ form_widget(registrationForm.agreeTerms) }}
                                        {{ form_label(registrationForm.agreeTerms) }}
                                        {{ form_errors(registrationForm.agreeTerms) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        {{ form_end(registrationForm) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}